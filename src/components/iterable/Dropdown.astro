---
interface Props {
    title: string, 
    items: { name: string, link: string}[],
    class?: string
}
const { title, items, class: className } = Astro.props;
---

<div class="dropdown">
    <button class="dropbtn">{title}</button>
    <div class="dropdown-content">
        {
            items.map(({ name, link }) => <a href={link}>{name}</a>)
        }
    </div>
</div>

<style>
    .dropbtn {
        background-color: white;
        color: black;
        padding: 10px 0;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        margin: auto 2%;
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #fafafa;
        border-radius: 6px;
        min-width: 100px;
        box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.18);
        z-index: 1;
    }

    .dropdown-content a {
        color: black;
        padding: 10px 14px;
        text-decoration: none;
        font-size: 16px;
        display: block;
    }

    .dropdown-content a:hover {
        background-color: #f1f1f1;
        border-radius: 6px;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        text-decoration: underline;
    }
</style>